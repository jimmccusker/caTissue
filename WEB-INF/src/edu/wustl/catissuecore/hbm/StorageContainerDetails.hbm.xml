<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.StorageContainerDetails"
        table="CATISSUE_STORAGE_CONTAINER_DETAILS"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="parameterName"
            type="string"
            update="true"
            insert="true"
            column="PARAMETER_NAME"
            length="50"
        />

        <property
            name="parameterValue"
            type="string"
            update="true"
            insert="true"
            column="VALUE"
            length="50"
        />

        <many-to-one
            name="storageContainer"
            class="edu.wustl.catissuecore.domain.StorageContainer"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="STORAGE_CONTAINER_ID"
        />
        
        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-StorageContainerDetails.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
