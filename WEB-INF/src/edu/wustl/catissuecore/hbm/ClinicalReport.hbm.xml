<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.ClinicalReport"
        table="CATISSUE_CLINICAL_REPORT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="surgicalPathologyNumber"
            type="string"
            update="true"
            insert="true"
            column="SURGICAL_PATHOLOGICAL_NUMBER"
            length="50"
        />

        <many-to-one
            name="participantMedicalIdentifier"
            class="edu.wustl.catissuecore.domain.ParticipantMedicalIdentifier"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="PARTICIPENT_MEDICAL_IDENTIFIER_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ClinicalReport.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
