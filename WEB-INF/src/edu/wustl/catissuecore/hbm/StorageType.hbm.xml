<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.StorageType"
        table="CATISSUE_STORAGE_TYPE"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="int"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="type"
            type="string"
            update="true"
            insert="true"
            column="TYPE"
            length="50"
            not-null="true"
            unique="true"
        />

        <property
            name="defaultTempratureInCentigrade"
            type="double"
            update="true"
            insert="true"
            column="DEFAULT_TEMPERATURE_IN_CENTIGRADE"
            length="30"
        />

        <many-to-one
            name="defaultStorageCapacity"
            class="edu.wustl.catissuecore.domain.StorageContainerCapacity"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="STORAGE_CONTAINER_CAPACITY_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-StorageType.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
