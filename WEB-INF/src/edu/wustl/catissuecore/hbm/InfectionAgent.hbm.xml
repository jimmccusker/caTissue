<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.dataModel.domain.InfectionAgent"
        table="CATISSUE_INFECTION_AGENT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="identifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="50"
        />

        <set
            name="accessionCollection"
            table="CATISSUE_ACCESSION_INFECTION"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="INFECTION_ID"
              />

              <many-to-many
                  class="edu.wustl.catissuecore.dataModel.domain.Accession"
                  column="ACCESSION_ID"
                  outer-join="auto"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-InfectionAgent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
