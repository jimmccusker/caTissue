<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.SpecimenClass"
        table="CATISSUE_SPECIMEN_CLASS"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_SPECIMEN_CLASS_SEQ</param>
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="50"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="30"
        />

        <set
            name="storageContainerCollection"
            table="CATISSUE_CONT_SPECIMENCL_REL"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="SPECIMEN_CLASS_ID"
              />

              <many-to-many
                  class="edu.wustl.catissuecore.domain.StorageContainer"
                  column="STORAGE_CONTAINER_ID"
                  outer-join="auto"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SpecimenClass.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
