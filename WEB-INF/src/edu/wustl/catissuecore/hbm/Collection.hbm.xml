<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.dataModel.domain.Collection"
        table="CATISSUE_COLLECTION"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="identifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="type"
            type="string"
            update="true"
            insert="true"
            column="TYPE"
            length="50"
        />

        <many-to-one
            name="activityStatus"
            class="edu.wustl.catissuecore.dataModel.domain.ActivityStatus"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS_ID"
        />

        <property
            name="barCode"
            type="string"
            update="true"
            insert="true"
            column="BAR_CODE"
            length="100"
        />

        <many-to-one
            name="capacity"
            class="edu.wustl.catissuecore.dataModel.domain.Capacity"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CAPACITY_ID"
        />

        <set
            name="boxCollection"
            table="CATISSUE_BOX"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="COLLECTION_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.dataModel.domain.Box"
              />
        </set>

        <many-to-one
            name="unit"
            class="edu.wustl.catissuecore.dataModel.domain.Unit"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="UNIT_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Collection.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
