<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.StorageContainer"
        table="CATISSUE_STORAGE_CONTAINER"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="50"
        />

        <property
            name="tempratureInCentigrade"
            type="double"
            update="true"
            insert="true"
            column="TEMPERATURE"
            length="30"
        />

        <property
            name="isFull"
            type="boolean"
            update="true"
            insert="true"
            column="IS_CONTAINER_FULL"
        />

        <property
            name="barcode"
            type="string"
            update="true"
            insert="true"
            column="BARCODE"
            length="50"
            unique="true"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="30"
        />

        <many-to-one
            name="storageType"
            class="edu.wustl.catissuecore.domain.StorageType"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="STORAGE_TYPE_ID"
        />

        <many-to-one
            name="site"
            class="edu.wustl.catissuecore.domain.Site"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SITE_ID"
        />

        <many-to-one
            name="parentContainer"
            class="edu.wustl.catissuecore.domain.StorageContainer"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="PARENT_CONTAINER_ID"
        />

        <set
            name="storageContainerDetailsCollection"
            table="CATISSUE_STORAGE_CONTAINER_DETAILS"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="STORAGE_CONTAINER_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.StorageContainerDetails"
              />
        </set>

        <many-to-one
            name="storageContainerCapacity"
            class="edu.wustl.catissuecore.domain.StorageContainerCapacity"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="STORAGE_CONTAINER_CAPACITY_ID"
        />

        <set
            name="childrenContainerCollection"
            table="CATISSUE_STORAGE_CONTAINER"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="PARENT_CONTAINER_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.StorageContainer"
              />
        </set>

        <property
            name="positionDimensionOne"
            type="int"
            update="true"
            insert="true"
            column="POSITION_DIMENSION_ONE"
            length="30"
        />

        <property
            name="positionDimensionTwo"
            type="int"
            update="true"
            insert="true"
            column="POSITION_DIMENSION_TWO"
            length="50"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-StorageContainer.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
