<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.ConsentTierResponse"
        table="CATISSUE_CONSENT_TIER_RESPONSE"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_CONSENT_TIER_RES_SEQ</param>
            </generator>
        </id>

        <property
            name="response"
            type="string"
            update="true"
            insert="true"
            column="RESPONSE"
            length="10"
        />

        <many-to-one
            name="consentTier"
            class="edu.wustl.catissuecore.domain.ConsentTier"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CONSENT_TIER_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ConsentTierResponse.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
