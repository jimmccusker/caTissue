<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.ExternalIdentifier"
        table="CATISSUE_EXTERNAL_IDENTIFIER"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_EXTERNAL_ID_SEQ</param>
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="50"
        />

        <property
            name="value"
            type="string"
            update="true"
            insert="true"
            column="VALUE"
            length="50"
        />

        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.domain.Specimen"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ExternalIdentifier.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
