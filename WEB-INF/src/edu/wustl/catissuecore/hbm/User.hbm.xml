<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.User"
        table="CATISSUE_USER"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="assigned">
            </generator>
        </id>

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

        <many-to-one
            name="department"
            class="edu.wustl.catissuecore.domain.Department"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="DEPARTMENT_ID"
        />

        <many-to-one
            name="cancerResearchGroup"
            class="edu.wustl.catissuecore.domain.CancerResearchGroup"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CANCER_RESEARCH_GROUP_ID"
        />

        <many-to-one
            name="institution"
            class="edu.wustl.catissuecore.domain.Institution"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="INSTITUTION_ID"
        />

        <many-to-one
            name="address"
            class="edu.wustl.catissuecore.domain.Address"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ADDRESS_ID"
        />

        <set
            name="collectionProtocolCollection"
            table="CATISSUE_COLLECTION_COORDINATORS"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="USER_ID"
              />

              <many-to-many
                  class="edu.wustl.catissuecore.domain.CollectionProtocol"
                  column="COLLECTION_PROTOCOL_ID"
                  outer-join="auto"
              />

        </set>

        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="STATUS_COMMENT"
            length="2000"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
