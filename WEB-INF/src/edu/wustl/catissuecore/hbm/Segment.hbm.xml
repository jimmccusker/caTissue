<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.dataModel.domain.Segment"
        table="CATISSUE_SEGMENT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="identifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="creationDate"
            type="date"
            update="true"
            insert="true"
            column="CREATION_DATE"
            length="50"
        />

        <many-to-one
            name="createdBy"
            class="edu.wustl.catissuecore.dataModel.domain.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CREATED_BY"
        />

        <property
            name="quantity"
            type="double"
            update="true"
            insert="true"
            column="QUANTITY"
            length="50"
        />

        <property
            name="quantityUnit"
            type="string"
            update="true"
            insert="true"
            column="QUANTITY_UNIT"
            length="50"
        />

        <property
            name="available"
            type="boolean"
            update="true"
            insert="true"
            column="AVAILABLE"
            length="50"
        />

        <property
            name="availableQuantity"
            type="double"
            update="true"
            insert="true"
            column="AVAILABLE_QUANTITY"
            length="50"
        />

        <many-to-one
            name="activityStatus"
            class="edu.wustl.catissuecore.dataModel.domain.ActivityStatus"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS_ID"
        />

        <property
            name="barcode"
            type="string"
            update="true"
            insert="true"
            column="BARCODE"
            length="50"
        />

        <many-to-one
            name="specimen"
            class="edu.wustl.catissuecore.dataModel.domain.Specimen"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="SPECIMEN_ID"
        />

        <set
            name="sampleCollection"
            table="CATISSUE_SAMPLE"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="SEGMENT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.dataModel.domain.Sample"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Segment.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
