<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.dataModel.domain.Study"
        table="CATISSUE_STUDY"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="identifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <many-to-one
            name="principalInvestigator"
            class="edu.wustl.catissuecore.dataModel.domain.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="PRINCIPAL_INVESTIGATOR"
        />

        <many-to-one
            name="coordinator"
            class="edu.wustl.catissuecore.dataModel.domain.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="COORDINATOR_IDENTIFIER"
        />

        <property
            name="title"
            type="string"
            update="true"
            insert="true"
            column="TITLE"
            length="200"
        />

        <property
            name="shortTitle"
            type="string"
            update="true"
            insert="true"
            column="SHORT_TITLE"
            length="100"
        />

        <property
            name="irbIdentifier"
            type="string"
            update="true"
            insert="true"
            column="IRB_IDENTIFIER"
            length="100"
        />

        <property
            name="startDate"
            type="date"
            update="true"
            insert="true"
            column="START_DATE"
        />

        <property
            name="endDate"
            type="date"
            update="true"
            insert="true"
            column="END_DATE"
        />

        <many-to-one
            name="activityStatus"
            class="edu.wustl.catissuecore.dataModel.domain.ActivityStatus"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS_ID"
        />

        <property
            name="enrollment"
            type="int"
            update="true"
            insert="true"
            column="ENROLLMENT"
            length="50"
        />

        <property
            name="descriptionURL"
            type="string"
            update="true"
            insert="true"
            column="DESCRIPTION_URL"
            length="100"
        />

        <set
            name="studyRequirementCollection"
            table="CATISSUE_STUDY_REQUIREMENT"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="STUDY_REQUIREMENT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.dataModel.domain.StudyRequirement"
              />
        </set>

        <set
            name="distributionCollection"
            table="CATISSUE_DISTRIBUTION"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="DISTRIBUTION_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.dataModel.domain.Distribution"
              />
        </set>

        <set
            name="protocolCollection"
            table="CATISSUE_PROTOCOL_STUDY"
            lazy="false"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="PROTOCOL_ID"
              />

              <many-to-many
                  class="edu.wustl.catissuecore.dataModel.domain.Protocol"
                  column="PROTOCOL_ID"
                  outer-join="auto"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Study.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
