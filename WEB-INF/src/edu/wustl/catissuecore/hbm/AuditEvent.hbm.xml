<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.AuditEvent"
        table="CATISSUE_AUDIT_EVENT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="systemIdentifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="ipAddress"
            type="string"
            update="true"
            insert="true"
            column="IP_ADDRESS"
            length="20"
        />

        <set
            name="auditEventLogCollection"
            table="CATISSUE_AUDIT_EVENT_LOG"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="AUDIT_EVENT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.AuditEventLog"
              />
        </set>

        <property
            name="timestamp"
            type="date"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />

        <many-to-one
            name="user"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
